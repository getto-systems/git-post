#!/bin/bash

git_post_main(){
  local message
  local parent
  local config_root
  local config
  local remote
  local pub
  local user_name
  local host

  message=$1; shift
  if [ -z "$message" ]; then
    echo 'usage: git post <pull-request subject and body>'
    exit 1
  fi

  parent=$1; shift
  if [ -z "$parent" ]; then
    parent=$(git parent)
  fi

  config_root=$HOME/.git-post
  mkdir -p $config_root
  chmod 700 $config_root

  remote=$(git remote -v | grep origin.*fetch)

  case "$remote" in
    *git://github.com* | *@github* | *https://github.com*)
      host=github
      ;;
    *https://*bitbucket.org* | *@bitbucket.org*)
      host=bitbucket
      ;;
    *git@gitlab.com* | *https://gitlab.com*)
      host=gitlab
      ;;
    *)
      echo "git-post: unknown hosting service. noop"
      exit 1
      ;;
  esac

  : ${GIT_POST_REMOTE_FORK_NAME:=pub}

  pub=$(git remote -v | grep "^${GIT_POST_REMOTE_FORK_NAME}.*fetch" | awk '{print $2}')
  if [ -z "$pub" ]; then
    echo "set public remote : named '${GIT_POST_REMOTE_FORK_NAME}'"
    exit 1
  fi

  case "$pub" in
    git@*)
      user_name=${pub#*:}
      user_name=${user_name%/*}
      ;;
    *)
      user_name=${pub#https://}
      user_name=${user_name%@*}
      ;;
  esac

  git_post_pull_request
}
git_post_pull_request(){
  local remote_detail
  local push_url
  local destination
  local repository
  local current
  local title
  local description

  echo "pull request..."
  remote_detail=$(git remote show origin)

  push_url=$(echo "$remote_detail" | grep 'Push.*URL')
  push_url=${push_url#*Push*URL: }
  push_url=${push_url%.git}

  repository=$(basename $push_url)
  destination=$(basename $(dirname $push_url))/$repository
  destination=${destination#*:}

  current=$(git symbolic-ref --short HEAD)

  echo "send: $current -> $parent"

  config=$config_root/$host-${user_name//\//-}

  title=$(echo "$message" | head -1)
  description=$message

  . git-post-$host
  git_post_$host
}

git_post_main "$@"
